<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:padding="20dp"
    android:layout_marginLeft="10dp"
    android:layout_marginTop="10dp"
    android:layout_marginRight="10dp"
    card_view:cardCornerRadius="4dp"
    android:elevation="3dp"
    card_view:cardBackgroundColor="#03DAC6">
<!-- Content of Recycler View in xxx.xml -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/llFauf"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="true"
    android:elevation="2dp"
    android:gravity="center_horizontal"
    android:orientation="horizontal"
    android:paddingTop="10dp"
    tools:background="@android:color/white"
    tools:ignore="RtlSymmetry">
    <LinearLayout
        android:layout_width="90dp"
        android:layout_height="120dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="0dp"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <TextView
            android:layout_marginLeft="10dp"
            android:id="@+id/txtVORNR"
            android:layout_width="60dp"
            android:layout_marginTop="20dp"
            android:layout_height="wrap_content"
            android:alpha="0.70"
            android:fontFamily="@font/arvo"
            android:gravity="center"
            android:textColor="#000000"
            android:textSize="12dp"
            android:text="ProductID"
            android:layout_gravity="left"/>

        <TextView
            android:layout_marginLeft="10dp"
            android:id="@+id/txtProductID"
            style="@style/TextAppearance.AppCompat.Headline"
            android:layout_width="60dp"
            android:layout_height="20dp"
            android:fontFamily="@font/arvo"
            android:gravity="center"
            android:textColor="@color/blueOEE"
            android:textSize="16dp"
            android:textStyle="bold"
            android:text="N"
            android:layout_gravity="center_horizontal|left"/>

        <TextView
            android:layout_marginLeft="10dp"
            android:id="@+id/txtAVONR"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/arvo"
            android:textColor="@color/lightText"
            android:textSize="12dp"
            android:text="Owner"
            />

        <TextView
            android:layout_marginLeft="10dp"
            android:id="@+id/txtOwner"
            style="@style/TextAppearance.AppCompat.Subhead"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:fontFamily="@font/arvo"
            android:gravity="left"
            android:textSize="15dp"
            tools:targetApi="jelly_bean"
            android:text="Nougat" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="10dp">

        <LinearLayout
            android:layout_width="167dp"
            android:layout_height="120dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_weight="2"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:layout_weight="1"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/txtARBPLName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="left"
                        android:textColor="@color/lightText"
                        android:fontFamily="@font/arvo"
                        android:textSize="12dp"
                        android:text="Timestamp" />

                    <!-- Arbeitsplatz -->
                    <TextView
                        android:id="@+id/txtTS"
                        style="@style/TextAppearance.AppCompat.Subhead"
                        android:layout_width="190dp"
                        android:layout_height="50dp"
                        android:ellipsize="end"
                        android:fontFamily="@font/arvo"
                        android:textSize="15dp"
                        tools:targetApi="jelly_bean"
                        android:text="Nougat" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txtFreiText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:textColor="@color/lightText"
                    android:fontFamily="@font/arvo"
                    android:textSize="12dp"
                    android:text="Location" />

                <TextView
                    android:id="@+id/txtLocation"
                    android:layout_width="220dp"
                    android:layout_height="30dp"
                    android:ellipsize="end"
                    android:gravity="left"
                    android:maxLines="2"
                    android:textColor="#000000"
                    android:fontFamily="@font/arvo"
                    android:textSize="14dp"
                    android:text="A family of confections made with sugar or honey, roasted nuts, whipped egg whites, and sometimes chopped candied fruit. The consistency of nougat is chewy, and it is used in a variety of candy bars and chocolates." />

            </LinearLayout>


        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="90dp"
        android:layout_height="match_parent"
        android:layout_marginBottom="15dp"
        android:layout_marginLeft="2dp"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_marginRight="20dp">

        <TextView
            android:id="@+id/txtLabelUniqueID"
            android:layout_width="60dp"
            android:layout_marginTop="0dp"
            android:layout_height="wrap_content"
            android:alpha="0.70"
            android:fontFamily="@font/arvo"
            android:gravity="center"
            android:textColor="#000000"
            android:textSize="12dp"
            android:text="UniqueID"
            android:layout_gravity="left"/>

        <TextView
            android:id="@+id/txtUniqueID"
            style="@style/TextAppearance.AppCompat.Headline"
            android:layout_width="60dp"
            android:layout_height="20dp"
            android:fontFamily="@font/arvo"
            android:gravity="center"
            android:textColor="@color/machine_title"
            android:textSize="16dp"
            android:textStyle="bold"
            android:text="N"
            android:layout_gravity="center_horizontal|left"/>
    </LinearLayout>

</LinearLayout>
</android.support.v7.widget.CardView>
